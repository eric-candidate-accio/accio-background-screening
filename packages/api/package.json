{
  "name": "@repo/api",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "wait-on -t 30000 http://localhost:4567/openapi.json && pnpm generate-types && echo 'Types generated successfully!'",
    "generate-types": "openapi-typescript http://localhost:4567/openapi.json -o src/generated/api.ts",
    "generate-types:file": "openapi-typescript ../../apps/api/openapi.yaml -o src/generated/api.ts",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.64.0"
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "openapi-typescript": "^7.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  }
}
